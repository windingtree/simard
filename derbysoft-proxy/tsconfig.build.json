{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },    
  },
  "include": ["./src/**/*.ts", "node_modules/*"],
  "exclude": ["test", "dist", "src/validation"],
  "references": [{ "path": "./src/validation/tsconfig.json" }]
}
