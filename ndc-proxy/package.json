{
  "name": "simard-ndc-proxy",
  "version": "2.0.1",
  "description": "Simard NDC Proxy",
  "main": "src/app.ts",
  "scripts": {
    "start": "nps",
    "serve": "nps serve",
    "lint2": "nps lint",
    "lint": "eslint . ",
    "test": "yarn start test",
    "build": "yarn run update-git-version && yarn start build",
    "presetup": "yarn install",
    "postinstall": "node -e \"if (process.env.SIMARD_ENVIRONMENT){process.exit(1)} \" || cp .env.$SIMARD_ENVIRONMENT .env",
    "aws:pack": "zip -x 'node_modules*' -x 'providerSpecs*' -x '.git*' -x 'logs*'  -x '.idea*' -x '*zip'  -r aws-ebs .",
    "setup": "yarn start config && yarn start setup.script",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "update-git-version": "ts-node ./src/lib/git/gitVersion.ts"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [],
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "bson": "^6.2.0",
    "camaro": "^6.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-jsonschema": "^5.0.0",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.4.1",
    "envfile": "^7.1.0",
    "express": "^4.16.2",
    "express-basic-auth": "^1.2.1",
    "express-status-monitor": "^1.3.4",
    "helmet": "^7.1.0",
    "jose": "^2",
    "jsonfile": "^6.1.0",
    "microframework-w3tec": "^0.6.3",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "mongodb": "^3.6.6",
    "morgan": "^1.10.0",
    "nocache": "^4.0.0",
    "nodemon": "^3.0.3",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0",
    "stripe": "^14.13.0",
    "ts-hashcode": "^1.0.2",
    "ts-node": "^10.9.2",
    "typedi": "0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-typedi-extensions": "^0.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-loki": "^6.0.8"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.0.39",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.7.35",
    "@types/node": "^20.11.10",
    "@types/sinon": "^17.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "mock-express-request": "^0.2.0",
    "mock-express-response": "^0.3.0",
    "nock": "^13.5.1",
    "sinon": "^17.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "*"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  }
}
